<%- include('partials/header'); -%>

<body class="user-body">
  <div class="container">
    <h1 id="userHeading">Update Details of Event</h1>
    <form action="/update/<%=data[0].e_id%>" method="post">
      <div class="row g-3 center_div">
        <div class="col-sm-12">
          <label for="firstName" class="form-label">Name of Event</label>
          <input type="text" class="form-control" name="name" value="<%=data[0].name%>" id="firstName">
        </div>

        <div class="col-sm-6">
          <label for="lastName" class="form-label">Date</label>
          <input type="date" name="date" value="<%=data[0].date%>" class="form-control">
        </div>

        <div class="col-sm-6">
          <label for="lastName" class="form-label">Time</label>
          <input type="time" name="time" value="<%=data[0].time%>" class="form-control" id="lastName">
        </div>


        <div class="col-12">
          <label for="address" class="form-label">Venue</label>
          <input type="text" name="venue" value="<%=data[0].venue%>" class="form-control" id="address" required="">
        </div>

        <div class="col-12">
          <label for="address" class="form-label">Description</label>
          <textarea name="desc" class="form-control" cols="30" placeholder="not more than 50 words" rows="2"><%=data[0].descrip%></textarea>
        </div>


        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="submit" class="btn btn-primary btn-lg btn-dark">SUBMIT</button>

        </div>

      </div>

    </form>

  </div>

  <%- include('partials/footer'); -%>
