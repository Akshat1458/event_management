<%- include('partials/header'); -%>

<body>
  <div class="container">
    <%if(data.length===0){%>
    <h2>Not registered for any event</h2>
    <%}else{%>
      <div class="row">
        <%data.forEach(function(d){%>
        <div class="col-lg-4">
          <div class="card" style="width: 18rem; margin-top:15px; margin-bottom:15px;">
            <svg width="400" height="180">
              <rect x="0" y="0" rx="0" ry="20" width="18rem" height="160" style="fill:red;stroke:black;stroke-width:5;opacity:0.5" />
              <text fill="#ffffff" font-size="30" font-family="Verdana" x="50" y="86"><%=d.name%></text>
            </svg>
            <div class="card-body">
              <p class="card-text"><%=d.descrip%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Date:<%=d.date%> Time:<%=d.time%></li>
              <li class="list-group-item"><%=d.venue%></li>
            </ul>
            <div class="card-body">
              <%if(user==="participant"){%>
                <a href="/cancelregistration/<%=d.e_id%>" class="btn btn-dark card-link mx-auto">cancel registration</a>
              <%}else{%>
                <a href="/delete/<%=d.e_id%>" class="btn btn-dark card-link">Delete</a>
                <a href="/update/<%=d.e_id%>" class="btn btn-dark card-link">Update</a>
              <%}%>
            </div>
          </div>
        </div>
        <%});%>

      </div>

    <%}%>





  </div>
  <%- include('partials/footer'); -%>
